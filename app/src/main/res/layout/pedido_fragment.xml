<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
        android:id="@+id/cpf_pedido_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpf_pedido_editText"
        android:layout_marginTop="-31dp"
        android:layout_marginEnd="21dp"
        android:layout_toStartOf="@+id/cpf_pedido_editText"
        android:text="CPF" />

    <Button
        android:id="@+id/listar_items_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpf_pedido_editText"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="-150dp"
        android:layout_toStartOf="@+id/cpf_pedido_editText"
        android:text="LISTAR" />

    <TextView
        android:id="@+id/listaItems_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listar_items_button"
        android:layout_marginTop="111dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"/>
</RelativeLayout>